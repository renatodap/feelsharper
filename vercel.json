{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "functions": {
    "app/api/ask/route.ts": {
      "maxDuration": 30
    },
    "app/api/ai/*": {
      "maxDuration": 30
    },
    "app/api/coach/*": {
      "maxDuration": 30
    },
    "app/api/webhooks/*": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/ingest/:path*",
      "destination": "https://us.posthog.com/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}